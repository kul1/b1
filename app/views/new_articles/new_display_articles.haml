- @title= "Articles"
/= paginate @articles
%table{:id=>"pending-table", :width=>"100%"}
  %tr{:style=>"color:white; background-color:#97BF60;"}
    %th เรื่อง
    %th เนื้อหา
    %th ลบ
  -@articles.each do |article|
    %tr
      %td= link_to article.name, '/mindapp/init?s=new_articles:new_show_comments&id=#"{article.id}"&confirm=yes'
      %td= link_to article.content,  '/mindapp/init?s=new_articles:new_show_comments&id=2&confirm=yes'
      %td(align='center')= link_to image_tag('delete.png', style:'border:none; float:none;'), "#", :onclick=>"if (confirm('กรุณายืนยัน')) {location.hash='/articles/rm/#{article.id}';}"
