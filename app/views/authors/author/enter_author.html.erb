<%
  doc = Author.new :issue_on=> Date.today, :process_at => Time.now
%>
<%= fields_for doc do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>
  <%= f.label :detail, "รายละเอียด" %>
  <%= f.text_area :detail, :cols=>50, :rows=>6 %>
  <%= f.label :pic, "ภาพประกอบ" %>
  <%= f.file_field :pic %>
  <%= f.label :attach, "เอกสารประกอบ pdf" %>
  <%= f.file_field :attach %>
<% end %>
